generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Host {
  id        Int      @id @default(autoincrement())
  phone     Int?     @unique
  email     String   @unique
  firstName String
  lastName  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]
}

model Event {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  startTime    DateTime
  endTime      DateTime
  latitude     Float
  longitude    Float
  capacity     Int
  availability Boolean
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  hostId       Int
  distance     Float
  host         Host      @relation(fields: [hostId], references: [id], onDelete: Cascade)
  bookings     Booking[]

  @@index([hostId], map: "Event_hostId_fkey")
}

model Booking {
  id       Int    @id @default(autoincrement())
  username String
  password String
  eventId  Int
  event    Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId], map: "Booking_eventId_fkey")
}
